  <script>
    const escritos = [
      {
        titulo: "Origen y evolución del sentido de vida",
        fecha: "30 de octubre de 2025",
        contenido: `
          <h3>1. El sentido de vida como impulso primario</h3>
          <ul>
            <li>Es lo que <strong>moviliza</strong> a la persona...</li>
          </ul>
          <p>El sentido de vida es la fuerza invisible que moviliza a cada persona...</p>
        `
      }
    ];

    const contenedor = document.getElementById("contenedor");
    escritos.forEach(e => {
      const article = document.createElement("article");
      article.innerHTML = `
        <h2>${e.titulo}</h2>
        <small><em>${e.fecha}</em></small>
        ${e.contenido}
        <hr />
      `;
      contenedor.appendChild(article);
    });
  </script>
